<?xml version="1.0" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Adapter -->

        <service id="plentymarkets_adapter" class="PlentymarketsAdapter\PlentymarketsAdapter">
            <tag name="plenty_connector.adapter" />
        </service>

        <!-- Guzzle -->

        <service id="plentymarkets_adapter.http_client.handler" class="GuzzleHttp\Handler\CurlHandler">
            <factory class="PlentymarketsAdapter\Client\Handler\HandlerFactory" method="factory" />
        </service>

        <service id="plentymarkets_adapter.http_client.default_handler_stack" class="GuzzleHttp\HandlerStack">
            <factory class="GuzzleHttp\HandlerStack" method="create" />

            <argument type="service" id="plentymarkets_adapter.http_client.handler" />
        </service>

        <service id="plentymarkets_adapter.http_client.logging.message_formatter" class="GuzzleHttp\MessageFormatter">
            <argument>{method} {target} - {req_body} - {code}</argument>
        </service>

        <service id="plentymarkets_adapter.http_client.middleware.logging" class="GuzzleHttp\Middleware">
            <factory class="GuzzleHttp\Middleware" method="log" />

            <argument type="service" id="plenty_connector.logger" />
            <argument type="service" id="plentymarkets_adapter.http_client.logging.message_formatter" />
            <argument type="constant">Psr\Log\LogLevel::DEBUG</argument>
        </service>

        <service id="plentymarkets_adapter.http_client.handler_stack" class="GuzzleHttp\HandlerStack" parent="plentymarkets_adapter.http_client.default_handler_stack">
            <call method="push">
                <argument type="service" id="plentymarkets_adapter.http_client.middleware.logging" />
            </call>
        </service>

        <service id="plentymarkets_adapter.http_client" class="GuzzleHttp\Client">
            <argument type="collection">
                <argument key="handler" type="service" id="plentymarkets_adapter.http_client.handler_stack" />
            </argument>
        </service>

        <!-- Client -->

        <service id="plentmarkets_adapter.client" class="PlentymarketsAdapter\Client\Client">
            <argument type="service" id="plentymarkets_adapter.http_client" />
            <argument type="service" id="plenty_connector.config" />
            <argument>%kernel.environment%</argument>
        </service>

        <!-- Response Parser -->

        <service id="plentmarkets_adapter.response_parser.country" class="PlentymarketsAdapter\ResponseParser\Country\CountryResponseParser">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="plentmarkets_adapter.response_parser.currency" class="PlentymarketsAdapter\ResponseParser\Currency\CurrencyResponseParser">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="plentmarkets_adapter.response_parser.customer_group" class="PlentymarketsAdapter\ResponseParser\CustomerGroup\CustomerGroupResponseParser">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="plentmarkets_adapter.response_parser.language" class="PlentymarketsAdapter\ResponseParser\Language\LanguageResponseParser">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="plentmarkets_adapter.response_parser.manufacturer" class="PlentymarketsAdapter\ResponseParser\Manufacturer\ManufacturerResponseParser">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="plentmarkets_adapter.response_parser.order_status" class="PlentymarketsAdapter\ResponseParser\OrderStatus\OrderStatusResponseParser">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="plentmarkets_adapter.response_parser.payment_method" class="PlentymarketsAdapter\ResponseParser\PaymentMethod\PaymentMethodResponseParser">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="plentmarkets_adapter.response_parser.payment_status" class="PlentymarketsAdapter\ResponseParser\PaymentStatus\PaymentStatusResponseParser">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="plentmarkets_adapter.response_parser.shipping_profile" class="PlentymarketsAdapter\ResponseParser\ShippingProfile\ShippingProfileResponseParser">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="plentmarkets_adapter.response_parser.shop" class="PlentymarketsAdapter\ResponseParser\Shop\ShopResponseParser">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="plentmarkets_adapter.response_parser.unit" class="PlentymarketsAdapter\ResponseParser\Unit\UnitResponseParser">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="plentmarkets_adapter.response_parser.vat_rate" class="PlentymarketsAdapter\ResponseParser\VatRate\VatRateResponseParser">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <!-- Manufacturer handlers -->

        <service id="plentymarkets_adapter.query_handler.fetch_all_manufacturers" class="PlentymarketsAdapter\QueryBus\QueryHandler\Manufacturer\FetchAllManufacturersQueryHandler">
            <argument type="service" id="plentmarkets_adapter.client" />
            <argument type="service" id="plentmarkets_adapter.response_parser.manufacturer" />
            <argument type="service" id="plenty_connector.logger" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="plentymarkets_adapter.query_handler.fetch_changed_manufacturers" class="PlentymarketsAdapter\QueryBus\QueryHandler\Manufacturer\FetchChangedManufacturersQueryHandler">
            <argument type="service" id="plentmarkets_adapter.client" />
            <argument type="service" id="plenty_connector.config" />
            <argument type="service" id="plentmarkets_adapter.response_parser.manufacturer" />
            <argument type="service" id="plenty_connector.logger" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="plentymarkets_adapter.query_handler.fetch_manufacturer" class="PlentymarketsAdapter\QueryBus\QueryHandler\Manufacturer\FetchManufacturerQueryHandler">
            <argument type="service" id="plentmarkets_adapter.client" />
            <argument type="service" id="plentmarkets_adapter.response_parser.manufacturer" />
            <argument type="service" id="plenty_connector.identity_service" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <!-- Category handlers -->

        <service id="plentymarkets_adapter.query_handler.fetch_all_categories" class="PlentymarketsAdapter\QueryBus\QueryHandler\Category\FetchAllCategoriesQueryHandler">
            <argument type="service" id="plentmarkets_adapter.client" />
            <argument type="service" id="plentmarkets_adapter.response_parser.manufacturer" />
            <argument type="service" id="plenty_connector.logger" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="plentymarkets_adapter.query_handler.fetch_changed_categories" class="PlentymarketsAdapter\QueryBus\QueryHandler\Category\FetchChangedCategoriesQueryHandler">
            <argument type="service" id="plentmarkets_adapter.client" />
            <argument type="service" id="plenty_connector.config" />
            <argument type="service" id="plentmarkets_adapter.response_parser.manufacturer" />
            <argument type="service" id="plenty_connector.logger" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="plentymarkets_adapter.query_handler.fetch_category" class="PlentymarketsAdapter\QueryBus\QueryHandler\Category\FetchCategoryQueryHandler">
            <argument type="service" id="plentmarkets_adapter.client" />
            <argument type="service" id="plentmarkets_adapter.response_parser.manufacturer" />
            <argument type="service" id="plenty_connector.identity_service" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <!-- Mapping query handlers -->

        <service id="plentymarkets_adapter.query_handler.fetch_all_countries" class="PlentymarketsAdapter\QueryBus\QueryHandler\Country\FetchAllCountriesQueryHandler">
            <argument type="service" id="plentmarkets_adapter.client" />
            <argument type="service" id="plentmarkets_adapter.response_parser.country" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="plentymarkets_adapter.query_handler.fetch_all_currencies" class="PlentymarketsAdapter\QueryBus\QueryHandler\Currency\FetchAllCurrenciesQueryHandler">
            <argument type="service" id="plentmarkets_adapter.client" />
            <argument type="service" id="plentmarkets_adapter.response_parser.currency" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="plentymarkets_adapter.query_handler.fetch_all_custoemr_groups" class="PlentymarketsAdapter\QueryBus\QueryHandler\CustomerGroup\FetchAllCustomerGroupsQueryHandler">
            <argument type="service" id="plentmarkets_adapter.client" />
            <argument type="service" id="plentmarkets_adapter.response_parser.customer_group" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="plentymarkets_adapter.query_handler.fetch_all_languages" class="PlentymarketsAdapter\QueryBus\QueryHandler\Language\FetchAllLanguagesQueryHandler">
            <argument type="service" id="plentmarkets_adapter.response_parser.language" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="plentymarkets_adapter.query_handler.fetch_all_order_statuses" class="PlentymarketsAdapter\QueryBus\QueryHandler\OrderStatus\FetchAllOrderStatusesQueryHandler">
            <argument type="service" id="plentmarkets_adapter.client" />
            <argument type="service" id="plentmarkets_adapter.response_parser.order_status" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="plentymarkets_adapter.query_handler.fetch_all_payment_methods" class="PlentymarketsAdapter\QueryBus\QueryHandler\PaymentMethod\FetchAllPaymentMethodsQueryHandler">
            <argument type="service" id="plentmarkets_adapter.client" />
            <argument type="service" id="plentmarkets_adapter.response_parser.payment_method" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="plentymarkets_adapter.query_handler.fetch_all_payment_statuses" class="PlentymarketsAdapter\QueryBus\QueryHandler\PaymentStatus\FetchAllPaymentStatusesQueryHandler">
            <argument type="service" id="plentmarkets_adapter.response_parser.payment_status" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="plentymarkets_adapter.query_handler.fetch_all_shipping_profiles" class="PlentymarketsAdapter\QueryBus\QueryHandler\ShippingProfile\FetchAllShippingProfilesQueryHandler">
            <argument type="service" id="plentmarkets_adapter.client" />
            <argument type="service" id="plentmarkets_adapter.response_parser.shipping_profile" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="plentymarkets_adapter.query_handler.fetch_all_shops" class="PlentymarketsAdapter\QueryBus\QueryHandler\Shop\FetchAllShopsQueryHandler">
            <argument type="service" id="plentmarkets_adapter.client" />
            <argument type="service" id="plentmarkets_adapter.response_parser.shop" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="plentymarkets_adapter.query_handler.fetch_all_units" class="PlentymarketsAdapter\QueryBus\QueryHandler\Unit\FetchAllUnitsQueryHandler">
            <argument type="service" id="plentmarkets_adapter.client" />
            <argument type="service" id="plentmarkets_adapter.response_parser.unit" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="plentymarkets_adapter.query_handler.fetch_all_vat_rates" class="PlentymarketsAdapter\QueryBus\QueryHandler\VatRate\FetchAllVatRatesQueryHandler">
            <argument type="service" id="plentmarkets_adapter.client" />
            <argument type="service" id="plentmarkets_adapter.response_parser.vat_rate" />

            <tag name="plenty_connector.query_handler" />
        </service>
    </services>
</container>
